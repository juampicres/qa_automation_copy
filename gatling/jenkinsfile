pipeline {
    agent any
    environment {
        MAVEN_HOME = '/opt/maven'
        PATH = '$PATH:$MAVEN_HOME/bin'
    }
    stages {
        stage("Build Maven") {
            steps {
                dir("gatling"){
                   sh 'mvn -B clean package'
                }
            }
        }
        stage("Running Performance Suite") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                    gatlingArchive()
                }
            }
        }
    }
}