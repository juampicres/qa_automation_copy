pipeline {
    agent any
    environment {
        MAVEN_HOME = "/opt/maven"
        PATH = "${MAVEN_HOME}/bin"
    }
    stages {
        stage("Build Maven") {
            steps {
                dir("gatling"){
                   sh 'echo ${MAVEN_HOME}'
                   sh 'echo ${PATH}'
                   sh 'mvn -B clean package'
                }
            }
        }
        stage("Running Performance Suite") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                        gatlingArchive()
                }
            }
        }
    }
}