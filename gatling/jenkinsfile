pipeline {
    agent any
    environment {
        MAVEN_HOME = "/usr/local/maven"
    }
    stages {
        stage("Build Maven") {
            steps {
                dir("gatling"){
                   sh 'echo MAVEN_HOME is set to: ${MAVEN_HOME}'
                   sh 'mvn -B clean package'
                }
            }
        }
        stage("Running Performance Suite") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                        gatlingArchive()
                }
            }
        }
    }
}