pipeline {
    agent any
    stages {
        stage("Build Maven") {
            steps {
                dir("gatling"){
                    sh 'export MAVEN_HOME=/opt/maven'
                    sh 'export PATH=$PATH:$MAVEN_HOME/bin'
                    sh 'mvn -B clean package'
                }
            }
        }
        stage("Running Performance Suite") {
            steps {
                sh 'mvn gatling:test'
            }
            post {
                always {
                    gatlingArchive()
                }
            }
        }
    }
}